{
  "compilerOptions": {
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./app",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["app/**/*.ts", "app/lambdas/**/*.ts"],
  "exclude": ["node_modules"]
}
